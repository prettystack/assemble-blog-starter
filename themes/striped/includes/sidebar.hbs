
<!-- Sidebar -->
<div id="sidebar">

    <!-- Logo -->
    <a href="{{ site.url }}/">
      <div id="logo">
        <h1> {{ config.site.name}} </h1>
      </div>
    </a>

    <!-- Nav -->
    <nav class="nav">

      <ul>

        {{#each config.menus}}

          {{#sameUrl url ../pagename }}
            <li class="current_page_item"><a href="{{url}}">{{name}}</a></li>
          {{else}}
            <li><a href="{{url}}">{{name}}</a></li>
          {{/sameUrl}}

        {{/each}}
      </ul>
    </nav>
    <nav class="nav">
      <header>
        <h2>Recent Posts</h2>
      </header>
      <ul>
        {{#withSort post 'data.date'}}
          {{#eachIndex this.pages}}
          {{#lt index 3}}
            {{#sameUrl item.pagename ../../../pagename }}
              <li class="current_page_item"><a href="{{ replaceStr item.dest 'dist' '' }}">{{ item.data.title }}</a></li>
            {{else}}
              <li><a href="{{ replaceStr item.dest 'dist' ''}}">{{ item.data.title }}</a></li>
            {{/sameUrl}}

          {{/lt}}
          {{/eachIndex}}
        {{/withSort}}

      </ul>
    </nav>

